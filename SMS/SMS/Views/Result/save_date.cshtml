@model IEnumerable<SMS.Models.AddResult>

@{
    ViewBag.Title = "save_date";
    Layout = "~/Views/Shared/_Layout_logout.cshtml";
}

<h2>save_date</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.std_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.std_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.class_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sub_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.exam_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marks_obt)
        </th>

        <th></th>
    </tr>
    @using (Html.BeginForm("save_date", "Result", FormMethod.Post))
