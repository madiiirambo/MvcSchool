                <input type="number" name="item[@i].exam_id" value="@item.exam_id" />
       </td>
            <td>
                <input type="number" name="item[@i].marks_obt" value="@item.marks_obt" />
           </td>
        </tr>
            i += 1;
        }
        <tr>
            <td>
                <input type="submit" value="Save" class="btn btn-default" />
            </td>
